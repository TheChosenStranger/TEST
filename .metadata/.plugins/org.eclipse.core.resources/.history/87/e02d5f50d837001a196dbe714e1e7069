#include "STD_TYPES.h"
#include "Delay.h"
#include "DIO_interface.h"
#include "PORT_interface.h"
#include "CLCD_interface.h"

#define F_CPU 800000UL
#include <util/delay.h>

void Task1(void)
{
	CLCD_voidInitialize();
	LCD_voidWriteString("MG2");
	_delay_ms(1000);
	CLCD_voidInitialize();
	CLCD_voidCursorPosition(1, 3);
	LCD_voidWriteString("MG2");
	_delay_ms(1000);
	CLCD_voidInitialize();
	CLCD_voidCursorPosition(0, 6);
	LCD_voidWriteString("MG2");
	_delay_ms(1000);
	CLCD_voidInitialize();
	CLCD_voidCursorPosition(1, 9);
	LCD_voidWriteString("MG2");
	_delay_ms(1000);
	CLCD_voidInitialize();
	CLCD_voidCursorPosition(0, 12);
	LCD_voidWriteString("MG2");
	_delay_ms(1000);
	CLCD_voidInitialize();
	CLCD_voidCursorPosition(1, 9);
	LCD_voidWriteString("MG2");
	_delay_ms(1000);
	CLCD_voidInitialize();
	CLCD_voidCursorPosition(0, 6);
	LCD_voidWriteString("MG2");
	_delay_ms(1000);
	CLCD_voidInitialize();
	CLCD_voidCursorPosition(1, 3);
	LCD_voidWriteString("MG2");
	_delay_ms(1000);
}

u8 Password[4]={0,0,0,0};
u8 i=0;
u8 trails = 3;
void Task2(void)
{
	if(!GetPinValue('D',7))
	{
		CLCD_voidWriteData('*');
		while(!GetPinValue('D',7)){;}
		Password[i]=7;
		i++;
		if(i==4)
		{
			i=0;
			if(Password[0] == 7 && Password[1] == 7 && Password[2] == 7 && Password[3] == 7)
			{LCD_voidWriteString("Login Successful");while(1){;}}
			else
			{
				LCD_voidWriteString("Wrong password try again");
				Password[0] = 0;
				Password[1] = 0 ;
				Password[2] = 0 ;
				Password[3] = 0;
				_delay_ms(10000);
				trails--;
				if (trails == 0)
				{LCD_voidWriteString("Failed 3 times system will sleep 1 min");_delay_ms(20000);trails=3;}
			}
		}
	}
	else if(!GetPinValue('D',6))
	{
		CLCD_voidWriteData('*');
		while(!GetPinValue('D',6)){;}
	}
	else if(!GetPinValue('D',5))
	{
		CLCD_voidWriteData('*');
		while(!GetPinValue('D',5)){;}
	}
	else if(!GetPinValue('D',4))
	{
		CLCD_voidWriteData('*');
		while(!GetPinValue('D',4)){;}
	}
	else if(!GetPinValue('D',3))
	{
		CLCD_voidWriteData('*');
		while(!GetPinValue('D',3)){;}
	}
}
void main (void)
{
	PortInitialize();
	CLCD_voidInitialize();
	LCD_voidWriteString("Password: ");

	while(1)
	{
		Task2();
	}
}
