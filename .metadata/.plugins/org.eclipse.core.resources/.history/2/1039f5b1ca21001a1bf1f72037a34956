#include "STD_TYPES.h"
#include "Delay.h"
#include "DIO_interface.h"
#include "PORT_interface.h"
#include "LED_interface.h"
#include "Switch_interface.h"
#include "SevenSeg_interface.h"

void main (void)
{
	PortInitialize();
	SevenSeg_Enable(0);
	SevenSeg_Disable(1);
	u8 i=10;
	while(1)
	{
		if (i <10){i=10;}
		SevenSeg_SetNumber(i,0);
		delay(50);
		if (!GetSwitchValue() && i<13)
		{
			SevenSeg_Enable(0);
			SevenSeg_Disable(1);
			i++;
		}
		else if(i==13)
		{

			SevenSeg_Enable(1);
			SevenSeg_Disable(0);
			SevenSeg_SetNumber(i,1);
			delay(50);
			i++;
		}
		else if (!GetSwitchValue() && i>13)
		{

			if(i==15)
			{
				i=10;
				SevenSeg_SetNumber(i,0);
				delay(50);
				i--;i--;
			}
			i++;
		}

	}
}
