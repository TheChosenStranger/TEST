#include "STD_TYPES.h"
#include "Delay.h"
#include "DIO_interface.h"
#include "PORT_interface.h"
#include "LED_interface.h"
#include "Switch_interface.h"
#include "SevenSeg_interface.h"

void main (void)
{
	PortInitialize();
	SevenSeg_Enable(0);
	SevenSeg_Disable(1);
	u8 i=10;
	while(1)
	{
		if (!GetSwitchValue())
		{i++;if(i==18){i=10;}}
		else if (!GetPinValue('B',1))
		{i++;if(i==18){i=10;}}
		if (i<14)
		{
			SevenSeg_Enable(0);
			SevenSeg_Disable(1);
		}
		else
		{
			SevenSeg_Enable(1);
			SevenSeg_Disable(0);
		}
		SevenSeg_SetNumber(i,0);
		delay(50);


	}
}
