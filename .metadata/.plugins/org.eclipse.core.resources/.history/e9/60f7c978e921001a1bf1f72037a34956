#include "STD_TYPES.h"
#include "Delay.h"
#include "DIO_interface.h"
#include "PORT_interface.h"
#include "LED_interface.h"
#include "Switch_interface.h"
#include "SevenSeg_interface.h"

void main (void)
{
	PortInitialize();
	SevenSeg_Enable(0);
	SevenSeg_Disable(1);
	u8 i=10;
	u8 k=10;
	while(1)
	{
		SevenSeg_SetNumber(i,0);
		delay(50);
		if (!GetSwitchValue())
		{i++;k++;}
		if (k<14)
		{
			SevenSeg_Enable(0);
			SevenSeg_Disable(1);
			i++;k++;
		}
		else
		{
			SevenSeg_Enable(1);
			SevenSeg_Disable(0);
			if(i==18){k=10,i=10;}
		}



		/*if (!GetSwitchValue() && i<13 && k<13)
		{
			SevenSeg_Enable(0);
			SevenSeg_Disable(1);
			i++;
			k++;
		}
		else if(!GetSwitchValue() && i==13)
		{

			SevenSeg_Enable(1);
			SevenSeg_Disable(0);
			SevenSeg_SetNumber(i,1);
			delay(50);
			i++;
			k++;
		}
		else if (!GetSwitchValue() && i>13 && i<15)
		{
			i++;
			k++;
		}
		else if(!GetSwitchValue() && k==15)
		{
			i=10;
			k++;
		}
		else if(!GetSwitchValue() && k==16)
		{
			k=10;
			SevenSeg_Enable(0);
			SevenSeg_Disable(1);
		}*/

	}
}
