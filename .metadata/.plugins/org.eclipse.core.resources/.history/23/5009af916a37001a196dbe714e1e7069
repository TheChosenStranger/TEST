#define	CLCD_u8_RS_PORT	'B'
#define	CLCD_u8_RW_PORT 'B'
#define	CLCD_u8_E_PORT	'B'

#define	CLCD_u8_D0_PORT	'C'
#define	CLCD_u8_D1_PORT	'C'
#define	CLCD_u8_D2_PORT	'C'
#define	CLCD_u8_D3_PORT	'C'
#define	CLCD_u8_D4_PORT	'C'
#define	CLCD_u8_D5_PORT	'C'
#define	CLCD_u8_D6_PORT	'C'
#define	CLCD_u8_D7_PORT	'C'

#define	CLCD_u8_RS_PIN 0
#define	CLCD_u8_RW_PIN 1
#define	CLCD_u8_E_PIN  2

#define	CLCD_u8_D0_PIN 0
#define	CLCD_u8_D1_PIN 1
#define	CLCD_u8_D2_PIN 2
#define	CLCD_u8_D3_PIN 3
#define	CLCD_u8_D4_PIN 4
#define	CLCD_u8_D5_PIN 5
#define	CLCD_u8_D6_PIN 6
#define	CLCD_u8_D7_PIN 7
