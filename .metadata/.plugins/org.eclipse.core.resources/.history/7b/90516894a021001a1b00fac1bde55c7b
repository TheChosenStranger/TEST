#include "STD_TYPES.h"
#include "Delay.h"
#include "DIO_interface.h"
#include "PORT_interface.h"
#include "LED_interface.h"
#include "Switch_interface.h"
#include "SevenSeg_interface.h"

void main (void)
{
	PortInitialize();
	u8 i=10;
	u8 key_pressed;
	while(1)
	{
		SevenSeg_Enable(0);
		SevenSeg_Disable(1);
		SevenSeg_SetNumber(i,0);
		if (GetPinValue('B',0))
		{
			delay(150);
			i++; if(i==16){i=10;}
		}
	}
}
